LUA_BINDIR= c:\usr\local\bin
LUA_DIR= c:\usr\local\share\lua\5.1
LUA_LIBDIR= c:\usr\local\lib\lua\5.1

install:
	IF NOT EXIST $(LUA_DIR)\orbit mkdir $(LUA_DIR)\orbit
	copy src\orbit.lua $(LUA_DIR)\
	copy src\model.lua $(LUA_DIR)\orbit
	copy src\orbit $(LUA_BINDIR)\
