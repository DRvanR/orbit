
<IfModule mod_cgi.c>
  <IfModule !mod_fcgid.c>
    AddHandler cgi-script .lua
  </IfModule>
</IfModule>

<IfModule mod_fcgid.c>
  AddHandler fcgid-script .lua
  FCGIWrapper /usr/bin/wsapi.fcgi .lua
</IfModule>

<FilesMatch "\.(lua|db|sql|mysql|cgi|fcgi)$">
  Deny from all
  Allow from none
</FilesMatch>

<Files "blog.lua">
  Allow from all
  Deny from none
  <IfModule mod_xsendfile.c>
    XSendFile on
  </IfModule>
</Files>
